<p style="color: green"><%= notice %></p>

<h1>Clientes</h1>

<%= link_to "Nuevo Cliente", new_client_path %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Telefono</th>
      <th scope="col">Email</th>
      <th scope="col-2">Acciones</th>
    </tr>
  </thead>

  <hr>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <%= render client %>
        <td>
        <div class="btn-group" role="group">

          <%= link_to "Editar", edit_client_path(client), class: "btn btn-warning me-1 " %>
          <%= button_to "Eliminar", client, method: :delete, class: "btn btn-danger "%>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
