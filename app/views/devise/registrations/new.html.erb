<h2> Nuevo usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirmacion_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :name, autocomplete: "Nombre" %>
  </div>

  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :phone, autocomplete: "Teléfono" %>
  </div>

  <div class="field">
    <%= f.label :direccion %><br />
    <%= f.text_field :address, autocomplete: "Dirección" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
